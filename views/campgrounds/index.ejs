<%- include('../partials/header'); -%>

<div class="container" style="margin-top: 20px;">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
          <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>    
        </div>
    </header>
    
    <div class="row" style="display: flex; flex-wrap: wrap;">
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds</h3>
        </div>
    </div>

    <div class="row  text-center">
        <% campgrounds.forEach(function(campground){ %> 
            <div class="col-md-3 col-sm-6" style="margin-bottom: 15px;"> 
                <div class="img-thumbnail">
                    <img class="img-fluid "  src="<%= campground.image %>" alt="">
                    <h6  style="margin:10px"><%= campground.name %></h6>
                    <p>
                        <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary"> More Info</a>
                    </p>
                </div>     
            </div>    
        <%});%>
    </div>




    

</div>

<%- include('../partials/footer'); -%>

